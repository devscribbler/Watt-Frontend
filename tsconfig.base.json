{
  "compilerOptions": {
    "strict": true,
    "allowJs": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "target": "es6",
    "types": ["jest", "node"]
  },
  "include": ["./packages/components/**/*"],
  "exclude": ["node_modules", ".yarn"],
  "jsx": "preserve"
}
